@model IEnumerable<SmartphoneManagement.Models.Smartphone>

<h2>Smartphone Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-action="Search" method="get">
    <p>
        <b>Search:</b>
        <input type="text" name="searchString">
        <b>Release Date:</b>
        <input type="date" name="startDate">
        <b>Min Price:</b>
        <input type="number" name="minPrice" step="0.01">
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<form asp-action="ToggleAvailability" method="post">
    <table class="table">
        <!-- Existing table headers remain unchanged -->

        <thead>
            <tr>
                <!-- Add a new th for the checkbox -->
                <th>
                    <input type="checkbox" id="selectAll" />
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Existing table data remains unchanged -->

                    <td>
                        <!-- Add a new checkbox for each record -->
                        <input type="checkbox" name="selectedIds" value="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <input type="submit" value="Toggle Availability" class="btn btn-warning" />
</form>
